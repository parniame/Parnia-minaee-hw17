@model List<Staff>;



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="col">
            <div class="row">
                <form asp-controller="Store">
                    <div class="form-group ">
                        <label for="storeId">Store ID</label>
                        <input  class="form-control" id="storeId" placeholder="Search by Store ID">
                        @* <input name="filter" type="text" pattern="^\d+$" title="Only positive integer" class="form-control" id="storeId" placeholder="Search by Store ID"> *@
                        
                        <div class="form-group">
                            <label for="storeName">Store Name</label>
                            <input name="filter" type="text" class="form-control" id="storeName" placeholder="Search by Store Name">
                           
                        </div>
                        <button asp-action="Filter" type="submit" class="btn btn-primary">Search</button>


                </form>
            </div>
            
            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th>
                                Staff ID
                            </th>

                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Store ID
                            </th>
                            <th>
                                Store Name
                            </th>
                            <th>
                                Manager First Name
                            </th>
                            <th>
                                Manager Last Name
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.Id</td>
                                <td>@staff.FirstName</td>
                                <td>@staff.LastName</td>
                                <td>@staff.Email</td>
                                <td>@staff.Phone</td>
                                <td>@staff.StoreId</td>
                                <td>@staff.StoreName</td>
                                <td>@staff.ManagerFirstName</td>
                                <td>@staff.ManagerLastName</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>

</body>
</html>

